{
    "version": "2.0.0",
    "presentation": {
        "panel": "dedicated",
        "focus": true,
        "revealProblems": "onProblem"
    },
    "tasks": [
        {
            "label": "Clean Project",
            "type": "shell",
            "command": "make clean",
            "group": {
                "kind": "build",
                "isDefault": false,
            },
            "detail": "Cleans all build files"
        },
        {
            "label": "Make Compile Commands",
            "type": "shell",
            "dependsOn": [
                "Clean Project"
            ],
            "command": "bear --output ${workspaceFolder}/../compile_commands.json -- make -j8 -O DBG=yes PYTHON=${command:python.interpreterPath}",
            "windows": {
                "command": "make -j8 -O DBG=yes PYTHON=\\''${command:python.interpreterPath}'\\' | compiledb --full-path -v -f -o '${workspaceFolder}/../compile_commands.json'"
            },
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiles project in Debug mode and generates compile_commands.json"
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "make -j8 -O DBG=yes PYTHON=${command:python.interpreterPath}",
            "windows":{
                "command": "make -j8 -O DBG=yes PYTHON=\\''${command:python.interpreterPath}'\\'"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiles project in Debug mode"
        }
    ]
}