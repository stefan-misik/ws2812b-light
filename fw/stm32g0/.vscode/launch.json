{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with ST-Link",
            "preLaunchTask": "Build Debug",
            "cwd": "${workspaceFolder}",
            "executable": "_build/debug/ws2812b-light.elf",
            "postLaunchCommands": [
                "monitor halt",
                "set $sp = &_estack",
                "set $pc = &Reset_Handler",
            ],
            "postResetCommands": [
                "monitor halt",
                "set $sp = &_estack",
                "set $pc = &Reset_Handler",
            ],
            "postRestartCommands": [
                "monitor halt",
                "set $sp = &_estack",
                "set $pc = &Reset_Handler",
            ],
            "device": "STM32G070K8",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 10
            },
            "servertype": "stlink"
        },
        {
            "name": "Run Release with ST-Link",
            "preLaunchTask": "Build Release",
            "cwd": "${workspaceFolder}",
            "executable": "_build/release/ws2812b-light.elf",
            "device": "STM32G070K8",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "servertype": "stlink"
        }
    ]
}